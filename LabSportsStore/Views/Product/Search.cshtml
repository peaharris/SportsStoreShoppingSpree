@model IQueryable<Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> SportsStore </title>
</head>

<body>
    <hr />
    @foreach (Product p in Model)
    {
        <h3> @p.Name  </h3>
        @p.Description
        <h4> @p.Price.ToString("c") </h4>
        <hr />
    }
</body>
</html>
