@model Product

    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.ProductId">
                    @Model.Name
                </a>
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@Model.Price.ToString("c")</small><!--The "c" means currency-->
                </span>
            </h4>
        </div>
        <div class="cart-text p-1"> @Model.Description </div>
        <div>
            <form id="@Model.ProductId" 
                  asp-action="AddToCart"
                  asp-controller="Cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" namespace="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    Category : @Model.Category
                    <button type="submit" 
                            class="btn btn-success btn-sm pull-right" 
                            style="float:right">
                        Add to Cart
                    </button>
                </span>
            </form>
        </div>
    </div>
